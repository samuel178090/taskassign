// prisma/schema.prisma

generator client {
  provider        = "prisma-client-js"
  previewFeatures = [] // add any preview features if needed
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  email          String         @unique
  password       String
  role           Role           @default(USER)
  isLocked       Boolean        @default(false)
  lockUntil      DateTime?
  failedAttempts Int            @default(0)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  tasks          Task[]
  refreshTokens  RefreshToken[]

  @@map("users") // map table name to lowercase plural (PostgreSQL convention)
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  completed   Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tasks")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("refresh_tokens")
}

enum Role {
  USER
  ADMIN
}
